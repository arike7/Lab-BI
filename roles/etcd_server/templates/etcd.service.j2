[Unit]
Description=etcd - Highly-available key value store
Documentation=https://github.com/etcd-io/etcd
After=network.target

[Service]
Type=notify
ExecStart=/usr/local/bin/etcd \
  --name {{ inventory_hostname }} \
  --data-dir /var/lib/etcd \
  --initial-cluster-state new \
  --initial-cluster {{ hostvars['etcd01']['ansible_host'] }}=http://{{ hostvars['etcd01']['ansible_host'] }}:2380 \
  --initial-advertise-peer-urls http://{{ hostvars['etcd01']['ansible_host'] }}:2380 \
  --listen-peer-urls http://{{ hostvars['etcd01']['ansible_host'] }}:2380 \
  --listen-client-urls http://{{ hostvars['etcd01']['ansible_host'] }}:2379,http://127.0.0.1:2379 \
  --advertise-client-urls http://{{ hostvars['etcd01']['ansible_host'] }}:2379
Restart=always
RestartSec=5s
LimitNOFILE=40000
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target