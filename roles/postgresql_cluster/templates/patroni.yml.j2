name: {{ inventory_hostname }}
scope: postgres_cluster
namespace: /service/
loop_wait: 10
ttl: 30
retry_timeout: 10
maximum_lag_on_failover: 1048576

restapi:
  listen: 0.0.0.0:8008
  connect_address: "{{ ansible_host }}:8008"

etcd3:
  host: etcd01:2379

bootstrap:
  dcs:
    postgresql:
      use_pg_rewind: true
      use_slots: true
      parameters:
        archive_mode: on
        archive_command: 'cd .'
        max_connections: 100
        wal_level: replica
        hot_standby: on
        log_statement: 'all'
      pg_hba:
        - host all all 0.0.0.0/0 md5
      recovery_conf: {}
  initdb:
    - encoding: UTF8
    - locale: en_US.UTF-8
  create_replica_method:
    - basebackup

postgresql:
  listen: "{{ ansible_host }}:5432"
  connect_address: "{{ ansible_host }}:5432"
  data_dir: /var/lib/pgsql/16/data

log:
  level: INFO
